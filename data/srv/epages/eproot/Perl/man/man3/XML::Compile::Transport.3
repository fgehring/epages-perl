\& use XML::Compile::Transport::SOAPHTTP;
\& my $trans  = XML::Compile::Transport::SOAPHTTP\->new(...);
\& my $call   = $trans\->compileClient(...);
\&
\& my ($xmlout, $trace) = $call\->($xmlin);
